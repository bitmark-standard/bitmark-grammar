{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2020.string"],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": [
    "../node_modules/@types/ramda/*",
    "../node_modules/types-ramda/*",
    "../node_modules/@types/node/*",
    "../node_modules/@types/diff/*"
  ],
  "exclude": [
    "bin",
  ]
}
